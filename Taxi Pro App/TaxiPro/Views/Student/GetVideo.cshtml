@model TaxiPro.Models.ViewModels.VideoViewModel
@{
    ViewData["Title"] = "GetVideo";
}

@if ((@Model.URL.Contains("Navigation")) && (@Model.Order != 5))
{
    <div>
        <h3>@Model.Order.) @Model.Name</h3>
        <video id="vid-@Model.Order" width="1020" height="600" src="/@Model.URL" type="video/mp4" controls> @Model.Name </video>

        <div>
            <a class="button btn btn-default" asp-action="GetVideo" asp-route-i="@Model.Order"asp-route-eventId="@Model.EventId" asp-route-test="1" asp-route-studentId="@Model.Student.Id">Next Video</a>
        </div>
    </div>
}

@if (@Model.URL.Contains("Navigation and Culture 5"))
{
    <div>
        <h3>@Model.Order.) @Model.Name</h3>
        <video id="vid-@Model.Order" width="1020" height="600" src="/@Model.URL" controls type="video/mp4"> @Model.Name </video>

        <div>
            <a class="button btn btn-default" asp-action="GetTest" asp-route-testTypeId="2" asp-route-studentId="@Model.Student.Id" asp-route-eventId="@Model.EventId">Begin Test </a>
        </div>
    </div>

}

@if ((@Model.URL.Contains("Ordinance")) && (@Model.Order != 4))
{
    <div>
        <h3>@Model.Order.) @Model.Name</h3>
        <video id="vid-@Model.Order" width="1020" height="600" src="/@Model.URL" type="video/mp4" controls> @Model.Name </video>

        <div>
            <a class="button btn btn-default" asp-action="GetVideo" asp-route-i="@Model.Order" asp-route-eventId="@Model.EventId" asp-route-test="2" asp-route-studentId="@Model.Student.Id">Next Video</a>
        </div>
    </div>

}

@if ((@Model.URL.Contains("Ordinance")) && (@Model.Order == 4))
{
    <div>
        <h3>@Model.Order.) @Model.Name</h3>
        <video id="vid-@Model.Order" width="1020" height="600"  src="/@Model.URL" type="video/mp4" controls> @Model.Name </video>

        <div>
            <a class="button btn btn-default" asp-action="GetTest" asp-route-testTypeId="1" asp-route-eventId="@Model.EventId" asp-route-studentId="@Model.Student.Id">Begin Test </a>
        </div>
    </div>

}
